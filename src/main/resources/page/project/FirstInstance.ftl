<body>
<form role="form" id="result-form" class="form-horizontal" method="post">
    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="panel-title">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;项目审核：</span>
            <div style="float: right;">
                <a class="panel-collapse" data-toggle="collapse"
                   href=""><i class="fa fa-minus"></i></a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
        </div>
        <div class="panel-body collapse in">
            <div class="form-group">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="project_no" class="col-sm-5 control-label">项目编号：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="project_no1"   readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="project_name" class="col-sm-5 control-label">项目名称：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="project_name1" readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="quota" class="col-sm-5 control-label">担保公司：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="guarantee_id1"  readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="loan_no" class="col-sm-5 control-label">反担保公司：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="counter_guarantee_id1"  readonly>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="loan_name" class="col-sm-5 control-label">计划金额：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="plan_money1"   readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="loan_ratify_no" class="col-sm-5 control-label">最小成立金额：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="min_money1"   readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="loan_ratify_name" class="col-sm-5 control-label">最大成立金额：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="max_money1"   readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="contacts" class="col-sm-5 control-label">风险准备金：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="risk_reserve1"   readonly>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="contacts_add" class="col-sm-5 control-label">利率：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="interest_rate1"  readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="contacts_phone" class="col-sm-5 control-label">项目用途：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="project_purpose1"   readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="contacts_email" class="col-sm-5 control-label">还款方式：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="payment_method1"  readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="legal_add" class="col-sm-5 control-label">周期：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="cycle1"   readonly>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="legal_phone" class="col-sm-5 control-label">周期单位：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="cycle_unit1"   readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="legal_email" class="col-sm-5 control-label">手续费：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="fee1"  readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="description" class="col-sm-5 control-label">项目类型：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="project_type1"   readonly>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="description" class="col-sm-5 control-label">募集开始时间：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="start_raising_time1"   readonly>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="description" class="col-sm-5 control-label">募集截止时间：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="end_raising_time1"   readonly>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="description" class="col-sm-1 control-label">项目描述：</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="project_describe1"   readonly>
                        </div>
                    </div>
                </div>
            </div>
         </div>
        <input type="hidden" id="id" name="id" value="#{id}">
    </div>
</form>
<form action="#" method="post" id="form-check" class="form-horizontal">
    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="panel-title">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;审核意见：</span>
            <div style="float: right;">
                <a class="panel-collapse" data-toggle="collapse"
                   href=""><i class="fa fa-minus"></i></a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
        </div>
        <div class="panel-body collapse in">
            <div class="form-group">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="preliminary_audi_code" class="col-sm-5 control-label">审核人工号：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="preliminary_audi_code"  name="preliminary_audi_code"  onblur="checkPreliminary_audi_code();"><span id="preliminary_audi_codeMsg"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="project_name" class="col-sm-5 control-label">审核人：</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="" >
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="quota" class="col-sm-5 control-label">审核意见：</label>
                        <div class="col-sm-7">
                            <select class="form-control"  id="project_status" name="project_status">
                                <option value=""> 请选择 </option>
                                <option value="1"> 通&nbsp;&nbsp;&nbsp;&nbsp;过 </option>
                                <option value="3"> 拒&nbsp;&nbsp;&nbsp;&nbsp;绝 </option>
                                <option value="0"> 待&nbsp;&nbsp;&nbsp;&nbsp;定 </option>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" id="id" name="id" value="#{id}">
                    <a class="btn btn-success" href="javascript:saveRow()">提　交</a>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    // $(".panel").css("margin-bottom", "0px");
    $(".panel-body").css("padding", "10px");
    $(".control-label").css("margin-right", "-15px");
    $(".panel-heading").css("padding", "5px");

    function saveRow(){
        $.post('/project/updateCheck',$('#form-check').serialize(),function (data) {
            alert(data.message);
        });
    }

   $(function(){
       var a = document.getElementById("id").value;
        $.post('/project/selinstance?id='+a,$('#form-instance').serialize(),function(data){
            $("#project_no1").val(data.project_no);
            $("#project_name1").val(data.project_name);
            $("#guarantee_id1").val(data.guarantee_id);
            $("#counter_guarantee_id1").val(data.counter_guarantee_id);
            $("#loan_ratify_no1").val(data.loan_ratify_no);
            $("#loan_ratify_name1").val(data.loan_ratify_name);
            $("#plan_money1").val(data.plan_money);
            $("#min_money1").val(data.min_money);
            $("#max_money1").val(data.max_money);
            $("#risk_reserve1").val(data.risk_reserve);
            $("#interest_rate1").val(data.interest_rate);
            $("#project_purpose1").val(data.project_purpose);
            $("#payment_method1").val(data.payment_method);
            $("#loan_employee_code1").val(data.loan_employee_code);
            $("#cycle_unit1").val(data.cycle_unit);
            $("#fee1").val(data.fee);
            $("#project_type1").val(data.project_type);
            $("#start_raising_time1").val(data.start_raising_time);
            $("#end_raising_time1").val(data.end_raising_time);
            $("#project_describe1").val(data.project_describe);
        });
    })

    function checkPreliminary_audi_code(){
        var a = (document.getElementById("preliminary_audi_code").value).trim();
        var msg = "";
        if(!a) {
            msg = "审核人工号必须填写";
        }
        document.getElementById("preliminary_audi_codeMsg").innerHTML = msg;
        document.getElementById("preliminary_audi_code").parentNode.parentNode.style.color=msg==""?"black":"red";
    }
</script>
</body>